<body>
    <script>
        function isLeapYear(year) {
  if (year % 4 ==0 ) {
    return true;
  } else {
    return false;
  }
}


var year = parseInt(prompt("Enter year:"));
if (isLeapYear(year)) {
  document.write(year + " is a leap year.");
} else {
  document.write(year + " is not a leap year.");
}

    </script>
</body>
</html>